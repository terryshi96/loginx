#!/usr/bin/env ruby

require 'optparse'
require 'methadone'
require 'loginx.rb'

class App
  include Methadone::Main
  include Methadone::CLILogging
  configuration = {
      port: 22

  }

  main do |arguments|
    puts ARGV.shift
    puts ARGV.shift
    puts options[:p] if options[:p]
  end

  description 'login quickly without entering password and support generating&&sending ssh_key'
  arg :arguments, :many
  on("-p Port","set port") do |value|#validate and read arguments
       options[:p] = value
  end

  version Loginx::VERSION

  go!
end
